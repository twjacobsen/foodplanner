.row-fluid
  .span12.page-header
    h1= t('locale.plans:weekPlan')
    h3= capitalize(t('misc.from'))
      |  {{week[0].date | date:'d. MMM'}} 
      span= t('misc.to') 
      |  {{week[6].date | date:'d. MMM'}}
    a(ng-href="#/week")= t('locale.plans:currentWeek')
    
.row-fluid
  .span1.prev-week
    h1.clickable
      a(ng-href="#/week/{{prevWeekOffset}}") <
  .span10
    ul#mealPlan
      li(ng-repeat="day in week", date="{{day.date}}")
        div
          h2.day {{day.localDay}}
          div(ng-switch on="day.recipeName")
            a.btn.meal.update-meal(ng-switch-when="", ng-href="#/day/{{day.date}}")= t('locale.plans:addMeal')
            div.update-meal.clickable(ng-switch-default, ng-href="#/day/{{day.date}}")
              h3.meal {{day.recipeName}}
                span.help-inline
                  a.icon-pencil

  .span1.next-week
    h1.clickable
      a(ng-href="#/week/{{nextWeekOffset}}") >
